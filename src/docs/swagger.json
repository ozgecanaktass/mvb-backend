{
  "openapi": "3.0.0",
  "info": {
    "title": "Eyewear Dealer Management API (MVB)",
    "version": "1.0.0",
    "description": "Backend API documentation for dealer management, order tracking, and link analytics."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "API Server"
    },
    {
      "url": "http://localhost:3000/l",
      "description": "Short Link Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Dealer": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "currentLinkHash": { "type": "string" },
          "isActive": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "dealerId": { "type": "integer" },
          "customerName": { "type": "string" },
          "status": { "type": "string", "enum": ["Pending", "In Production", "Shipped"] },
          "configuration": { "type": "object" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log in to the system and obtain a Token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "default": "admin@uretici.com" },
                  "password": { "type": "string", "default": "admin-sifresi" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful, token returned." },
          "401": { "description": "Invalid email or password." }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log out (Invalidate Token)",
        "responses": {
          "200": { "description": "Logout successful." }
        }
      }
    },
    "/dealers": {
      "get": {
        "tags": ["Dealers"],
        "summary": "List all dealers",
        "responses": {
          "200": { "description": "List of dealers." }
        }
      },
      "post": {
        "tags": ["Dealers"],
        "summary": "Create a new dealer",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Dealer created successfully." },
          "401": { "description": "Unauthorized access." }
        }
      }
    },
    "/orders": {
      "get": {
        "tags": ["Orders"],
        "summary": "List all orders",
        "responses": {
          "200": { "description": "List of orders." }
        }
      },
      "post": {
        "tags": ["Orders"],
        "summary": "Create a new order (from Configurator)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["dealerId", "configuration"],
                "properties": {
                  "dealerId": { "type": "integer" },
                  "customerName": { "type": "string" },
                  "configuration": { "type": "object" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Order created successfully." }
        }
      }
    },
    "/orders/{id}/status": {
      "patch": {
        "tags": ["Orders"],
        "summary": "Update order status",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": { "type": "string", "example": "In Production" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status updated successfully." }
        }
      }
    },
    "/stats/{dealerId}": {
      "get": {
        "tags": ["Analytics"],
        "summary": "Get dealer click statistics",
        "description": "Returns visit logs for a dealer. Optional date filters available.",
        "parameters": [
          {
            "in": "path",
            "name": "dealerId",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Dealer ID to filter stats for"
          },
          {
            "in": "query",
            "name": "startDate",
            "required": false,
            "schema": { "type": "string", "format": "date" },
            "description": "Filter logs starting from this date (YYYY-MM-DD)"
          },
          {
            "in": "query",
            "name": "endDate",
            "required": false,
            "schema": { "type": "string", "format": "date" },
            "description": "Filter logs up to this date (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": { "description": "Statistics data retrieved." }
        }
      }
    }
  }
}