{
  "openapi": "3.0.0",
  "info": {
    "title": "Eyewear Dealer Management API (MVB)",
    "version": "1.2.0",
    "description": "Backend API documentation for dealer management, order tracking, multi-tenant user management, and security features."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "API Server"
    },
    {
      "url": "http://localhost:3000/l",
      "description": "Short Link Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Dealer": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "currentLinkHash": { "type": "string" },
          "isActive": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "email": { "type": "string" },
          "name": { "type": "string" },
          "role": { 
            "type": "string", 
            "enum": ["producer_admin", "dealer_admin", "dealer_user"] 
          },
          "dealerId": { "type": "integer", "nullable": true },
          "dealerLimit": { "type": "integer", "nullable": true, "description": "Max dealers allowed (Producer only)" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "dealerId": { "type": "integer" },
          "customerName": { "type": "string" },
          "status": { "type": "string", "enum": ["Pending", "In Production", "Shipped"] },
          "configuration": { "type": "object" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "ChangePassword": {
        "type": "object",
        "required": ["currentPassword", "newPassword", "confirmPassword"],
        "properties": {
          "currentPassword": { "type": "string", "format": "password" },
          "newPassword": { "type": "string", "format": "password", "minLength": 6 },
          "confirmPassword": { "type": "string", "format": "password" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log in to the system and obtain a Token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "default": "admin@uretici.com" },
                  "password": { "type": "string", "default": "admin-sifresi" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful, token returned." },
          "401": { "description": "Invalid email or password." }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log out (Invalidate Token)",
        "responses": {
          "200": { "description": "Logout successful." }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Change current user's password",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangePassword"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Password updated successfully." },
          "400": { "description": "Validation error (mismatch or weak password)." },
          "401": { "description": "Unauthorized." }
        }
      }
    },
    "/auth/users": {
      "post": {
        "tags": ["Auth"],
        "summary": "Create a new user (Multi-Tenant)",
        "description": "Producer can add a new Dealer Admin. Dealer Admin can add their own staff.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "name", "role"],
                "properties": {
                  "email": { "type": "string", "example": "ahmet@merkezoptik.com" },
                  "password": { "type": "string", "example": "strong-password" },
                  "name": { "type": "string", "example": "Ahmet Yilmaz" },
                  "role": { 
                    "type": "string", 
                    "enum": ["dealer_admin", "dealer_user"],
                    "example": "dealer_admin"
                  },
                  "dealerId": { 
                    "type": "integer", 
                    "description": "Required only if Producer is adding. Automatically assigned when Dealer Admin adds.",
                    "example": 101
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User created successfully." },
          "403": { "description": "You do not have permission to perform this action." }
        }
      }
    },
    "/dealers": {
      "get": {
        "tags": ["Dealers"],
        "summary": "List all dealers",
        "responses": {
          "200": { "description": "List of dealers." }
        }
      },
      "post": {
        "tags": ["Dealers"],
        "summary": "Create a new dealer",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Dealer created successfully." },
          "401": { "description": "Unauthorized access." }
        }
      }
    },
    "/orders": {
      "get": {
        "tags": ["Orders"],
        "summary": "List all orders",
        "responses": {
          "200": { "description": "List of orders." }
        }
      },
      "post": {
        "tags": ["Orders"],
        "summary": "Create a new order (from Configurator)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["dealerId", "configuration"],
                "properties": {
                  "dealerId": { "type": "integer" },
                  "customerName": { "type": "string" },
                  "configuration": { "type": "object" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Order created successfully." }
        }
      }
    },
    "/orders/{id}/status": {
      "patch": {
        "tags": ["Orders"],
        "summary": "Update order status",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": { "type": "string", "example": "In Production" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status updated successfully." }
        }
      }
    },
    "/stats/{dealerId}": {
      "get": {
        "tags": ["Analytics"],
        "summary": "Get dealer click statistics",
        "parameters": [
          {
            "in": "path",
            "name": "dealerId",
            "required": true,
            "schema": { "type": "integer" }
          },
          {
            "in": "query",
            "name": "startDate",
            "required": false,
            "schema": { "type": "string", "format": "date" },
            "description": "Start Date (YYYY-MM-DD)"
          },
          {
            "in": "query",
            "name": "endDate",
            "required": false,
            "schema": { "type": "string", "format": "date" },
            "description": "End Date (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": { "description": "Statistics data retrieved." }
        }
      }
    },
    "/{linkHash}": {
      "get": {
        "tags": ["Analytics"],
        "summary": "(B2C) Link Tracking and Redirection",
        "parameters": [
          {
            "in": "path",
            "name": "linkHash",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "302": { "description": "Redirect to configurator page." },
          "404": { "description": "Link not found." }
        }
      }
    }
  }
}