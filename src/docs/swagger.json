{
  "openapi": "3.0.0",
  "info": {
    "title": "Gözlük Bayi Yönetimi API (MVB)",
    "version": "1.3.0",
    "description": "Bayi yönetimi, sipariş takibi, çok kiracılı kullanıcı yönetimi ve dosya depolama (Storage) işlemleri için backend API dökümantasyonu."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "API Sunucusu"
    },
    {
      "url": "http://localhost:3000/l",
      "description": "Kısa Link Sunucusu"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Dealer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "currentLinkHash": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "producer_admin",
              "dealer_admin",
              "dealer_user"
            ]
          },
          "dealerId": {
            "type": "integer",
            "nullable": true
          },
          "dealerLimit": {
            "type": "integer",
            "nullable": true,
            "description": "Maksimum bayi sayısı (Sadece Üretici)"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "dealerId": {
            "type": "integer"
          },
          "customerName": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "Pending",
              "In Production",
              "Shipped"
            ]
          },
          "configuration": {
            "type": "object"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Appointment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "dealerId": {
            "type": "integer"
          },
          "customerName": {
            "type": "string"
          },
          "appointmentDate": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string",
            "enum": [
              "Eye Exam",
              "Styling",
              "Adjustment",
              "Other"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "Scheduled",
              "Completed",
              "Cancelled",
              "No Show"
            ]
          },
          "notes": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ChangePassword": {
        "type": "object",
        "required": [
          "currentPassword",
          "newPassword",
          "confirmPassword"
        ],
        "properties": {
          "currentPassword": {
            "type": "string",
            "format": "password"
          },
          "newPassword": {
            "type": "string",
            "format": "password",
            "minLength": 6
          },
          "confirmPassword": {
            "type": "string",
            "format": "password"
          }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Sisteme giriş yap ve Token al",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "default": "admin@uretici.com"
                  },
                  "password": {
                    "type": "string",
                    "default": "admin-sifresi"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Giriş başarılı, token döner."
          },
          "401": {
            "description": "Hatalı e-posta veya şifre."
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Çıkış yap (Token geçersiz kılma)",
        "responses": {
          "200": {
            "description": "Çıkış başarılı."
          }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Şifre değiştir",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangePassword"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Şifre başarıyla güncellendi."
          },
          "400": {
            "description": "Validasyon hatası (Eşleşmeme veya zayıf şifre)."
          },
          "401": {
            "description": "Yetkisiz erişim."
          }
        }
      }
    },
    "/auth/users": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Yeni kullanıcı oluştur (Multi-Tenant)",
        "description": "Üretici yeni bir Bayi Yöneticisi ekleyebilir. Bayi Yöneticisi kendi personellerini ekleyebilir.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password",
                  "name",
                  "role"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "ahmet@merkezoptik.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "guclu-sifre"
                  },
                  "name": {
                    "type": "string",
                    "example": "Ahmet Yilmaz"
                  },
                  "role": {
                    "type": "string",
                    "enum": [
                      "dealer_admin",
                      "dealer_user"
                    ],
                    "example": "dealer_admin"
                  },
                  "dealerId": {
                    "type": "integer",
                    "description": "Sadece Üretici ekliyorsa gereklidir. Bayi yöneticisi eklerken otomatik atanır.",
                    "example": 101
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kullanıcı başarıyla oluşturuldu."
          },
          "403": {
            "description": "Bu işlem için yetkiniz yok."
          }
        }
      }
    },
    "/dealers": {
      "get": {
        "tags": [
          "Dealers"
        ],
        "summary": "Tüm bayileri listele",
        "responses": {
          "200": {
            "description": "Bayi listesi."
          }
        }
      },
      "post": {
        "tags": [
          "Dealers"
        ],
        "summary": "Yeni bayi oluştur",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Bayi oluşturuldu."
          },
          "401": {
            "description": "Yetkisiz erişim."
          }
        }
      }
    },
    "/orders": {
      "get": {
        "tags": [
          "Orders"
        ],
        "summary": "Tüm siparişleri listele",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Sipariş listesi."
          }
        }
      },
      "post": {
        "tags": [
          "Orders"
        ],
        "summary": "Yeni sipariş oluştur (Konfigüratörden)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "dealerId",
                  "configuration"
                ],
                "properties": {
                  "dealerId": {
                    "type": "integer"
                  },
                  "customerName": {
                    "type": "string"
                  },
                  "configuration": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sipariş oluşturuldu."
          }
        }
      }
    },
    "/orders/{id}/status": {
      "patch": {
        "tags": [
          "Orders"
        ],
        "summary": "Sipariş durumunu güncelle",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status"
                ],
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "In Production"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Durum güncellendi."
          }
        }
      }
    },
    "/appointments": {
      "get": {
        "tags": [
          "Appointments"
        ],
        "summary": "Tüm randevuları listele",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Randevu listesi."
          }
        }
      },
      "post": {
        "tags": [
          "Appointments"
        ],
        "summary": "Yeni randevu oluştur",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "dealerId",
                  "customerName",
                  "appointmentDate"
                ],
                "properties": {
                  "dealerId": {
                    "type": "integer"
                  },
                  "customerName": {
                    "type": "string"
                  },
                  "appointmentDate": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "Eye Exam",
                      "Styling",
                      "Adjustment",
                      "Other"
                    ]
                  },
                  "notes": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Randevu başarıyla oluşturuldu."
          }
        }
      }
    },
    "/appointments/{id}/status": {
      "patch": {
        "tags": [
          "Appointments"
        ],
        "summary": "Randevu durumunu güncelle",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status"
                ],
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "Scheduled",
                      "Completed",
                      "Cancelled",
                      "No Show"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Durum güncellendi."
          }
        }
      }
    },
    "/storage/upload": {
      "post": {
        "tags": [
          "Storage"
        ],
        "summary": "Dosya Yükle (Admin & Bayi Yönetici)",
        "description": "Dosyayı Cloudflare R2'ye yükler ve public URL döner.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Dosya başarıyla yüklendi.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string",
                          "example": "https://pub-xxx.r2.dev/dealers/123.jpg"
                        },
                        "fileName": {
                          "type": "string"
                        },
                        "size": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dosya seçilmedi."
          },
          "401": {
            "description": "Yetkisiz erişim."
          }
        }
      }
    },
    "/storage/delete": {
      "delete": {
        "tags": [
          "Storage"
        ],
        "summary": "Dosya Sil",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "fileUrl"
                ],
                "properties": {
                  "fileUrl": {
                    "type": "string",
                    "example": "https://pub-xxx.r2.dev/dealers/123.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Dosya başarıyla silindi."
          },
          "401": {
            "description": "Yetkisiz erişim."
          }
        }
      }
    },
    "/stats/{dealerId}": {
      "get": {
        "tags": [
          "Analytics"
        ],
        "summary": "Bayi tıklama istatistikleri",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "dealerId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "startDate",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Başlangıç Tarihi (YYYY-MM-DD)"
          },
          {
            "in": "query",
            "name": "endDate",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Bitiş Tarihi (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": {
            "description": "İstatistik verisi."
          },
          "401": {
            "description": "Yetkisiz erişim (Token eksik)."
          },
          "403": {
            "description": "Yasak (Başkasının verisi)."
          }
        }
      }
    },
    "/{linkHash}": {
      "get": {
        "tags": [
          "Analytics"
        ],
        "summary": "(B2C) Link Takibi ve Yönlendirme",
        "parameters": [
          {
            "in": "path",
            "name": "linkHash",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Konfigüratör sayfasına yönlendirme."
          },
          "404": {
            "description": "Link bulunamadı."
          }
        }
      }
    }
  }
}